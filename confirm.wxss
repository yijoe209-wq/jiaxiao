.loading-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 40rpx 0;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.task-list {
  margin-top: 20rpx;
}

.task-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-item:last-child {
  border-bottom: none;
}

.task-number {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1;
}

.task-desc {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.task-meta {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.student-list {
  margin-top: 20rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  position: relative;
}

.student-item.active {
  background: #e7f1ff;
  border-color: #667eea;
}

.student-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.student-grade {
  font-size: 26rpx;
  color: #999;
}

.check-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #667eea;
}
