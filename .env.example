# Flask 配置
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///jiaxiao.db
# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://user:password@host:port/database

# 微信配置
WECHAT_TOKEN=your-wechat-token
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_ENCODING_AES_KEY=

# LLM 配置 (DeepSeek / OpenAI)
# DeepSeek API (推荐)
LLM_API_KEY=sk-your-deepseek-api-key
LLM_API_BASE=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=500

# OpenAI API (可选)
# LLM_API_KEY=sk-your-openai-api-key
# LLM_API_BASE=https://api.openai.com/v1
# LLM_MODEL=gpt-4o-mini

# OCR 配置 (腾讯云)
OCR_SECRET_ID=your-tencent-secret-id
OCR_SECRET_KEY=your-tencent-secret-key
OCR_REGION=ap-beijing

# 异步任务配置 (生产环境)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs

# 告警配置 (企业微信/钉钉 Webhook)
ALERT_WEBHOOK_URL=
ALERT_ERROR_THRESHOLD=10

# 业务配置
# 任务确认超时时间（秒），默认 24 小时
TASK_CONFIRM_TIMEOUT=86400
# 每日提醒时间
DEFAULT_REMINDER_TIME=17:00
