.tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #999;
  border-radius: 12rpx;
}

.tab.active {
  background: #667eea;
  color: white;
  font-weight: 600;
}

.task-card {
  padding: 30rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

.task-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.task-status.completed {
  background: #d4edda;
  color: #155724;
}

.task-status.pending {
  background: #fff3cd;
  color: #856404;
}

.task-preview {
  margin-bottom: 20rpx;
}

.task-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.task-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-small.complete {
  background: #28a745;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}
